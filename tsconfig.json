{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": true
    },
    "filesGlob": [
        "./src/**/*.ts",
        "./test/**/*.ts",
        "!./node_modules/**/*.ts",
        "src/custom-typings.d.ts",
        "typings/index.d.ts"
    ],
    "exclude": [
        "node_modules"
    ],
     "awesomeTypescriptLoaderOptions": {
        "useCache": true,
        "resolveGlobs": true,
        "forkChecker": true,
        "cacheDirectory": "node_modules/.awesome-typescript-loader-cache"
    }
}